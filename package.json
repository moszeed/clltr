{
    "name": "clltr",
    "private": "true",
    "version": "0.1.0",
    "description": "a web collector",
    "author": {
        "name": "Michael RÃ¶ber",
        "email": "moszeed@gmail.com"
    },
    "scripts": {

        "test" : "browserify ./tests/*.js | tape-run",

        "serve"    : "npm run watch",
        "build"    : "npm run build:libs && npm run build:js && npm run build:css && npm run build:html && npm run build:images",

        "build:libs"  : "sh bin/build-js-libs.sh",
        "build:images": "sh bin/build-imagemin.sh",
        "build:js"    : "sh bin/build-js.sh && sh bin/build-js-page.sh",
        "build:html"  : "sh bin/build-htmlmin.sh",
        "build:css"   : "lessc --compress ./client/styles/app.less > ./dist/styles/app.css",

        "watch"     : "concurrent 'npm run watch:js'  'npm run watch:css' 'npm run watch:html' 'npm run watch:images'",
        "watch:js"  : "nodemon -e js -w client/ -x 'npm run build:js'",
        "watch:css" : "nodemon -e less -w client/styles/ -x 'npm run build:css'",
        "watch:html": "nodemon -e tpl -w client/templates/ -x 'npm run build:html'",
        "watch:images": "nodemon -e png,gif -w client/images/ -x 'npm run build:images'"
    },
    "dependencies": {
        "backbone"            : "^1.2.1",
        "drbx-js-backbone"    : "^0.7.5",
        "jquery"              : "^2.1.4",
        "xhr"                 : "^2.0.2",
        "underscore"          : "^1.8.3"
    },
    "devDependencies": {
        "tape"              : "^4.0.0",
        "tape-run"          : "^1.0.0",
        "es6-promise"       : "^2.3.0",
        "request"           : "^2.58.0",
        "imagemin-cli"      : "^1.0.0",
        "phantom"           : "^0.7.2",
        "phantomjs-polyfill": "^0.0.1",
        "nodemon"           : "^1.3.7",
        "browserify"        : "^10.2.4",
        "concurrently"      : "^0.1.1",
        "html-minifier"     : "^0.7.2",
        "less"              : "^2.5.1",
        "uglifyjs"          : "^2.4.10"
    }
}
